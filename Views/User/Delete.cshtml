@model SMS.Web.Models.UserModel

@{
    ViewBag.Title = "Delete User";
}

<div class="container mt-5">
    <h2 class="mb-4">Delete User</h2>
    <div class="alert alert-danger" role="alert">
        Are you sure you want to delete this user?
    </div>
    <div class="card">
        <div class="card-header">
            Details for @Model.FirstName @Model.LastName
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>First Name:</strong> @Html.DisplayFor(model => model.FirstName)</p>
                    <p><strong>Last Name:</strong> @Html.DisplayFor(model => model.LastName)</p>
                    <p><strong>Email:</strong> @Html.DisplayFor(model => model.Email)</p>
                    <p><strong>Password:</strong> @Html.DisplayFor(model => model.Password)</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Gender:</strong> @Html.DisplayFor(model => model.Gender)</p>
                    <p><strong>Is Deleted:</strong> @Html.DisplayFor(model => model.IsDeleted)</p>
                    <p><strong>Created On:</strong> @Html.DisplayFor(model => model.CreatedOn)</p>
                </div>
            </div>
            @using (Html.BeginForm("Delete", "User", new { id = Model.Id }))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Delete</button>
                @Html.ActionLink("Cancel", "GetUsers", null, new { @class = "btn btn-secondary ml-2" })
            }
        </div>
    </div>
    <div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">
                <h5>@ViewBag.Message</h5>
            </div>
        }
    </div>
</div>
